# API Gateway Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_long
JWT_EXPIRES_IN=15m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_password_change_in_production

# Microservices URLs
AUTH_SERVICE_URL=http://localhost:3001
MARKET_SERVICE_URL=http://localhost:3002
PORTFOLIO_SERVICE_URL=http://localhost:3003
AI_SERVICE_URL=http://localhost:3004
TRADING_SERVICE_URL=http://localhost:3005

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info
