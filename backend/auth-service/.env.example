# Auth Service Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agentinvest
POSTGRES_USER=agentinvest
POSTGRES_PASSWORD=dev_password_change_in_production

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_chars
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_password_change_in_production

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@agentinvest.com

# Security
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=info
