# AgentInvest Environment Variables
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================

# PostgreSQL (Primary Database)
POSTGRES_USER=agentinvest
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=agentinvest
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# TimescaleDB (Time-Series Database)
TIMESCALE_USER=agentinvest
TIMESCALE_PASSWORD=your_secure_password_here
TIMESCALE_DB=agentinvest_timeseries
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433

# Redis (Cache & Session Store)
REDIS_PASSWORD=your_secure_password_here
REDIS_HOST=localhost
REDIS_PORT=6379

# MongoDB (Logs & Analytics)
MONGO_USER=agentinvest
MONGO_PASSWORD=your_secure_password_here
MONGO_DB=agentinvest_logs
MONGO_HOST=localhost
MONGO_PORT=27017

# ============================================
# Admin Tools (Development Only)
# ============================================

# pgAdmin
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Mongo Express
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin

# ============================================
# Application Configuration
# ============================================

# Node Environment
NODE_ENV=development

# Server
PORT=3000
API_VERSION=v1

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_min_32_chars_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_chars
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# External API Keys
# ============================================

# Market Data APIs
POLYGON_API_KEY=your_polygon_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_api_key

# News APIs
NEWS_API_KEY=your_news_api_key

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================
# Email Service (Optional)
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@agentinvest.com

# ============================================
# Cloud Storage (Optional)
# ============================================

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=agentinvest-uploads

# ============================================
# Monitoring & Logging
# ============================================

SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# ============================================
# Rate Limiting
# ============================================

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS Configuration
# ============================================

CORS_ORIGIN=http://localhost:5173,http://localhost:3000
